<tbody>
  <% user.clients.distinct.each do |client| %>
    <% user.assignments.joins(:project).where(status: 'active', project: { client_id: client.id }).each_with_index do |assignment, index| %>
      <%= render StaffPlan::AssignmentComponent.new(user:, client:, assignment:, index:) %>
    <% end %>
  <% end %>
</tbody>
