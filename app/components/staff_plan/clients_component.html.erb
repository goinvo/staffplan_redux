<tbody>
  <% user.clients.distinct.each do |client| %>
    <% user.projects.where(client:).each_with_index do |project, index| %>
      <% assignment = user.assignments.find_by(project: project) %>
      <%= render StaffPlan::AssignmentComponent.new(user:, assignment:, project:, index:) %>
    <% end %>
  <% end %>
</tbody>
